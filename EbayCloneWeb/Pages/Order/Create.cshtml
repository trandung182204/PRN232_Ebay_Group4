@page
@model EbayCloneWeb.Pages.Order.CreateModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            @if (Model.ImagesList != null && Model.ImagesList.Count > 0)
                            {
                                <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < Model.ImagesList.Count; i++)
                                        {
                                            var css = i == 0 ? "carousel-item active" : "carousel-item";
                                            <div class="@css">
                                                <img src="@Model.ImagesList[i]" class="d-block w-100" style="object-fit:contain;height:400px;" />
                                            </div>
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <div class="d-flex gap-2 mt-2">
                                    @foreach (var img in Model.ImagesList)
                                    {
                                        <img src="@img" class="img-thumbnail thumb-img" style="width:80px;height:80px;object-fit:cover;cursor:pointer" data-src="@img" />
                                    }
                                </div>
                            }
                            else
                            {
                                <img src="/images/placeholder.png" class="img-fluid" style="height:400px;object-fit:contain" />
                            }
                        </div>

                        <div class="col-md-6">

                            <h2>@Model.Product?.Title</h2>
                            <p class="text-muted">@Model.Product?.Description</p>
                            <h4 class="text-danger">$@string.Format("{0:0.00}", Model.Product?.Price ?? 0)</h4>

                            <div class="mb-3">
                                <span class="badge bg-success">In stock</span>
                                <span class="ms-2">? @Model.AvgRating.ToString("0.0")</span>
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="ProductId" />
                                <div class="row g-2 mb-3">
                                    <div class="col-4">
                                        <label class="form-label small">Quantity</label>
                                        <input asp-for="Quantity" class="form-control" />
                                    </div>
                                    <div class="col-8">
                                        <label class="form-label small">Region</label>
                                        <select asp-for="Region" class="form-select">
                                            <option value="north">North</option>
                                            <option value="central">Central</option>
                                            <option value="south">South</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small">Shipping address</label>
                                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter shipping address"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small">Payment Method</label>
                                    <select asp-for="PaymentMethod" class="form-select">
                                        <option>PayPal</option>
                                        <option>COD</option>
                                    </select>
                                </div>

                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary btn-lg">Place Order</button>
                                    <a asp-page="/Index" class="btn btn-outline-secondary">Continue shopping</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Seller</h5>
                    <p class="small text-muted mb-1">@Model.SellerUsername</p>
                    <p class="small text-muted">@Model.SellerEmail</p>
                    <a class="btn btn-outline-primary btn-sm mt-2">View store</a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body small text-muted">
                    <h6>Shipping</h6>
                    <p>Calculated at checkout. Estimated delivery 3-7 business days.</p>
                    <h6>Returns</h6>
                    <p>30-day return policy.</p>
                </div>
            </div>
        </div>
    </div>
</div>
